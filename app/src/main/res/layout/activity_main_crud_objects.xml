<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crudLayoutObjects"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudMainActivityObjects">

    <ImageView
        android:id="@+id/backgroundImageObjects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/titleImageObjects"
        android:layout_width="382dp"
        android:layout_height="214dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="663dp"
        android:layout_height="381dp"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etObjectName"
            android:layout_width="500dp"
            android:layout_height="58dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Objectnaam"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/etObjectDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etObjectDescription"
            android:layout_width="500dp"
            android:layout_height="58dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Objectbeschrijving"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/etObjectVideoURL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etObjectVideoURL"
            android:layout_width="500dp"
            android:layout_height="58dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Video URL"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCreateObjects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnCreateObjects"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/yellow"
            android:text="Object aanmaken"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="658dp"
        android:layout_height="461dp"
        android:layout_marginTop="628dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewDeleteObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object verwijderen"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/spinnerObjects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerObjects"
            android:layout_width="500dp"
            android:layout_height="58dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            app:layout_constraintBottom_toTopOf="@+id/btnDeleteObjects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Vraag"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etAnswer1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Antwoord 1"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etQuestion" />

        <EditText
            android:id="@+id/etAnswer2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Antwoord 2"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAnswer1" />

        <EditText
            android:id="@+id/etAnswer3"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Antwoord 3"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAnswer2" />

        <EditText
            android:id="@+id/etAnswer4"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Antwoord 4"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAnswer3" />

        <Button
            android:id="@+id/btnDeleteObjects"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="Object verwijderen"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnLogoffObjects"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#E41F1F"
        android:text="Uitloggen"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />

    <Button
        android:id="@+id/btnGoToUsers"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Users"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />
</androidx.constraintlayout.widget.ConstraintLayout>
